<Window x:Class="ArgKmlEditorNet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="581.35" Width="680">
    <Grid>
        <Button x:Name="OpenFileButton" Content="Open File" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="OpenFileButton_Click"/>
        <TreeView x:Name="KmlItemsTreeView" HorizontalAlignment="Left" Height="504" Margin="10,37,0,0" VerticalAlignment="Top" Width="184"/>
        <Label Content="Name:&#xD;&#xA;" HorizontalAlignment="Left" Margin="223,46,0,0" VerticalAlignment="Top" Width="61" Height="24"/>
        <TextBox x:Name="NameTextBox" HorizontalAlignment="Left" Height="23" Margin="308,49,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="292" TextChanged="NameTextBox_TextChanged"/>
        <Label Content="Description:&#xD;&#xA;" HorizontalAlignment="Left" Margin="223,75,0,0" VerticalAlignment="Top" Width="80" Height="25"/>
        <TextBox x:Name="DescriptionTextBox" HorizontalAlignment="Left" Height="85" Margin="308,77,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="287" AcceptsReturn="True" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Auto" TextChanged="DescriptionTextBox_TextChanged"/>
    </Grid>
</Window>
